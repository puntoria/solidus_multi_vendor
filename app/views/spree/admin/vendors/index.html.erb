<% content_for :page_title do %>
  <%= plural_resource_name(Spree::Vendor) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to t("spree.new_vendor"), new_object_url, class: "btn btn-primary", id: "admin_new_vendor" %>
<% end if can?(:create, Spree::Vendor) %>

<% content_for :table_filter_title do %>
  <%= t('spree.vendor') %>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_vendors_index_search">
    <%= search_form_for [:admin, @search] do |f| %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= label_tag :q_name_cont, I18n.t('spree.name') %>
            <%= f.text_field :name_cont, tabindex: 1, class: "form-control js-quick-search-target" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= label_tag :q_state_in, I18n.t('spree.state') %>
            <%= f.select :state_in, options_for_select(Spree::Vendor.state_machines[:state].states.collect { |s| [I18n.t("spree.vendor_states.#{s.name}"), s.value] }), { multiple: 'please select' }, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="actions filter-actions">
        <div data-hook="admin_vendors_index_search_buttons">
          <%= button_tag I18n.t('spree.filter_results'), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<% if @vendors.any? %>
  <table class="table sortable" data-hook="vendors_table" data-sortable-link="<%= update_positions_admin_vendors_url %>">
    <thead>
      <tr data-hook="vendors_header">
        <th>
          <%= I18n.t('spree.user') %>
        </th>
        <th>
          <%= sort_link @search, :name, I18n.t('spree.activerecord.attributes.vendor.name') %>
        </th>
        <th>
          <%= sort_link @search, :state, I18n.t('spree.activerecord.attributes.vendor.state') %>
        </th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @vendors.each do |vendor| %>
        <tr id="<%= spree_dom_id vendor %>" data-hook="vendors_row">
          <td>
            <%= vendor.users.first.email rescue nil %>
          </td>
          <td>
            <%= vendor.name %>
          </td>
          <td>
            <span class="label label-<%= vendor.state.downcase %>"><%= vendor.state.humanize.downcase %></span>
            <span class="icon icon-filter filterable js-add-filter" data-ransack-field="q_state_eq" data-ransack-value="<%= vendor.state %>"></span>
          </td>
          <td class="actions actions-2 text-right">
            <%= link_to_edit vendor, no_text: true, class: 'edit' if can?(:edit, vendor) %>
            <!-- Add translation icon support -->
            <%= link_to_with_icon 'translate',
                                  nil,
                                  spree.admin_translations_path('vendor', vendor.id),
                                  title: I18n.t('spree.i18n.translations'),
                                  class: 'btn btn-sm btn-primary' if defined? (SpreeGlobalize)%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= render 'spree/admin/shared/no_objects_found',
                 resource: Spree::Vendor,
                 new_resource_url: new_object_url %>
  </div>
<% end %>